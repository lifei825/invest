<!--pages/component/pages/note/note.wxml-->
    <view style="height: 100%;">
      <!-- <van-sticky offset-top="{{0}}">
        <van-button type="primary" style="float: right;" size="mini">编辑</van-button>
      </van-sticky> -->
      <van-nav-bar title="{{date}}" right-text="{{editStatus ? '保存' : '编辑' }}" custom-style="padding-top: 0px;background: -webkit-linear-gradient(top, #3282d3,#66CCFF, white)"
      bind:click-right="onClickRight"></van-nav-bar> 
      
      <!-- bind:click-right="onClickRight"/> -->
      <view style="padding-top: 0px;">
        <van-divider contentPosition="center" dashed hairline
          customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;">
        操盘</van-divider>
      </view>
    <van-cell-group inset>
         <van-collapse value="{{ activeNames }}" bind:change="onChange">
          <van-collapse-item wx:for="{{cp}}" wx:key="index" title2="{{item.name}}" name="{{index}}">
            <van-field value="{{ item.msg }}" label="" type="textarea"
            placeholder="请输入留言" autosize maxlength="100" readonly="{{!editStatus}}"
            show-word-limit="true" border="{{false}}"/>
            <view  wx:if="{{index == 0}}" slot="value" class="slot-value" style="color: {{2>1 ? 'crimson' : 'rgb(53 189 75)'}};">昨收SZ.3322, 100, 2.04%</view>
            <view  wx:elif="{{index == 1}}" slot="value" class="slot-value" style="color:rgb(53 189 75);">今开SZ.3322</view>
            <view  wx:elif="{{index == 3}}" slot="value" class="slot-value" style="color:rgb(53 189 75);">收盘SZ.3322</view>
            <view  wx:elif="{{index == 4}}" slot="value" class="slot-value" style="color:rgb(53 189 75);">沪深成交额: 13422亿</view>
            <view slot="title" class="slot-title">{{item.name}}</view>
          </van-collapse-item>
         </van-collapse>
    </van-cell-group>
    <!-- <scroll-view scroll-y="true" style="height: 300rpx;">
      <van-steps direction="vertical" steps="{{ steps }}" active="{{ active }}" bind:click-step="clickStep"/>
    </scroll-view> -->
    <van-divider contentPosition="left" dashed hairline
    customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;">
    悟</van-divider>
    <van-cell-group inset>
      <van-cell title="感悟记录" value="内容" label="描述信息" />
    </van-cell-group>
    <van-divider contentPosition="right" dashed hairline
    customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;">
    道</van-divider>
    <van-cell-group inset>
      <van-cell title="追踪验证" value="内容" label="描述信息" />
    </van-cell-group>
    <van-divider contentPosition="center" dashed hairline
    customStyle="color: #1989fa; border-color: #1989fa; font-size: 18px;">
    END</van-divider>

    </view>
    